@model Inmobiliaria.Models.Contrato

@{ ViewData["Title"] = "Crear"; }

<h2>Nuevo Contrato</h2>

<h6 class="alert alert-info">Inmueble de tipo: @ViewBag.Inmuebles.Tipo ubicado en: @ViewBag.Inmuebles.Direccion</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idInmueble" class="control-label"></label>
                <input asp-for="idInmueble" value=@ViewBag.Inmuebles.idInmueble readonly />
                <span asp-validation-for="idInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilinos</label>
                <select class="form-control" name="IdInq">
                    @foreach (var item in (IList<Inquilino>)ViewBag.Inquilinos)
                    {
        <option value="@item.idInquilino">@(item.Nombre + " " + item.Apellido)</option>
}
                </select>
                <span asp-validation-for="idInquilino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fecha Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Final</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoAlquiler" class="control-label"> $ Alquiler</label>
                <input asp-for="MontoAlquiler" value=@ViewBag.Inmuebles.Precio readonly />
                <span asp-validation-for="MontoAlquiler" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear Contrato" class="btn btn-success" />
                <a class="btn btn-info" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>


