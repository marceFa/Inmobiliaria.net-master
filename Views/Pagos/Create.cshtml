@model Inmobiliaria.Models.Pago

@{ ViewData["Title"] = "Crear"; }

<h2>Nuevo Pago</h2>

<h6 class="alert alert-info">  Contrato Nº: @ViewBag.Contratos.idContrato con el Inquilino: @ViewBag.Contratos.Inquilinos.Nombre  @ViewBag.Contratos.Inquilinos.Apellido .
    Por el Inmueble de tipo: @ViewBag.Contratos.Inmuebles.Tipo ubicado en: @ViewBag.Contratos.Inmuebles.Direccion</h6>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Numero" class="control-label">Nº de Pago</label>
                <input asp-for="Numero" value=@ViewBag.Numero class="form-control" readonly />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idContrato" class="control-label">Nº Contrato</label>
                <input asp-for="idContrato" value=@ViewBag.Contratos.idContrato class="form-control" type="hidden" />
                <span asp-validation-for="idContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label">Fecha De Pago</label>
                <input asp-for="FechaDePago" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" readonly />
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" value=@ViewBag.Contratos.MontoAlquiler class="form-control" readonly />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />  |
                <a class="btn btn-info" asp-action="Index">Regresar Listado Pagos</a>
            </div>
        </form>
    </div>
</div>



